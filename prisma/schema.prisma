// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                Int           @id @default(autoincrement())
  name             String
  email            String        @unique
  password         String
  balance          Float         @default(0)
  sentTransactions     Transaction[] @relation("FromUser")
  receivedTransactions Transaction[] @relation("ToUser")
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Float
  type        String   // "DEPOSIT" | "TRANSFER" | "REVERSAL"
  fromUser    User?    @relation("FromUser", fields: [fromUserId], references: [id])
  fromUserId  Int?
  toUser      User?    @relation("ToUser", fields: [toUserId], references: [id])
  toUserId    Int?
  status      String   @default("COMPLETED") // "COMPLETED" | "REVERSED"
  description String?
  createdAt   DateTime @default(now())
  reversedAt  DateTime?
  reversalId  Int?     @unique
  reversal    Transaction? @relation("TransactionReversal", fields: [reversalId], references: [id])
  originalTransaction Transaction? @relation("TransactionReversal")
}